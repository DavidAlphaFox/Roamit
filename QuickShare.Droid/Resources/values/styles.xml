<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MyTheme" parent="MyTheme.Base">
  </style>

  <style name="MyTheme.Dark" parent="MyTheme.Dark.Base">
  </style>

  <style name="MyTheme.Legacy" parent="MyTheme.Legacy.Base">
  </style>

  <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimaryDark">#FFFFFF</item>
    <item name="android:windowBackground">@drawable/splash_screen</item>
  </style>

  <!-- Base theme applied no matter what API -->
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light">
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#F44336</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#D32F2F</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#FF6E40</item>

    <item name="colorControlHighlight">#FF8A80</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
  </style>

  <!-- Base theme applied no matter what API -->
  <style name="MyTheme.Dark.Base" parent="Theme.AppCompat">
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#0078D7</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#004E8C</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#42A5F5</item>

    <item name="colorControlHighlight">#448AFF</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
  </style>

  <style name="MyTheme.Legacy.Base" parent="Theme.AppCompat">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">#3F51B5</item>
    <item name="colorPrimaryDark">#303F9F</item>
    <item name="colorAccent">#448AFF</item>
    <item name="colorControlHighlight">#448AFF</item>
  </style>

  <style name="FilePickerThemeLight" parent="NNF_BaseTheme.Light">
    <!-- Set these to match your theme -->
    <item name="colorPrimary">#F44336</item>
    <item name="colorPrimaryDark">#CCCCCC</item>
    <item name="colorAccent">#FF6E40</item>

    <!-- Setting a divider is entirely optional -->
    <item name="nnf_list_item_divider">?android:attr/listDivider</item>

    <!-- Need to set this also to style create folder dialog -->
    <item name="alertDialogTheme">@style/FilePickerAlertDialogThemeLight</item>

    <!-- If you want to set a specific toolbar theme, do it here -->
    <item name="nnf_toolbarTheme">@style/FilePickerToolbarThemeLight</item>
  </style>
  
  <style name="FilePickerToolbarThemeLight" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
</style>
    
  <style name="FilePickerAlertDialogThemeLight" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorPrimary">#F44336</item>
    <item name="colorPrimaryDark">#CCCCCC</item>
    <item name="colorAccent">#FF6E40</item>
  </style>
    
  <style name="FilePickerThemeDark" parent="NNF_BaseTheme">
    <!-- Set these to match your theme -->
    <item name="colorPrimary">#0078D7</item>
    <item name="colorPrimaryDark">#004E8C</item>
    <item name="colorAccent">#42A5F5</item>

    <!-- Setting a divider is entirely optional -->
    <item name="nnf_list_item_divider">?android:attr/listDivider</item>

    <!-- Need to set this also to style create folder dialog -->
    <item name="alertDialogTheme">@style/FilePickerAlertDialogThemeDark</item>

    <!-- If you want to set a specific toolbar theme, do it here -->
    <!-- <item name="nnf_toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
  </style>

  <style name="FilePickerAlertDialogThemeDark" parent="Theme.AppCompat.Dialog.Alert">
    <item name="colorPrimary">#0078D7</item>
    <item name="colorPrimaryDark">#004E8C</item>
    <item name="colorAccent">#42A5F5</item>
  </style>
</resources>