<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QuickShare.Desktop.Themes">
    <SolidColorBrush x:Key="TextColor" Color="Black" />
    <SolidColorBrush x:Key="BackgroundColor" Color="#FFE4E4E4" />
    <SolidColorBrush x:Key="ListItemBackgroundColor" Color="#99A0A0A0" />
    <SolidColorBrush x:Key="BorderColor" Color="#9A9A9A" />
    <BitmapImage x:Key="AppIcon" UriSource="pack://application:,,,/Resources/icon48.png" />
    <BitmapImage x:Key="SettingsIcon" UriSource="pack://application:,,,/Resources/settings.png" />

    <SolidColorBrush x:Key="ScrollBarBackground" Color="#E9E9E9" />
    <SolidColorBrush x:Key="ScrollBarButtonPressed" Color="#5D5D5D" />
    <SolidColorBrush x:Key="ScrollBarThumbMouseOver" Color="#8C8C8C" />
    <SolidColorBrush x:Key="ScrollBarThumbColor" Color="#BABABA" />
    <SolidColorBrush x:Key="ScrollBarButtonForeground" Color="#606060" />
    <SolidColorBrush x:Key="ScrollBarButtonMouseOver" Color="#D2D2D2" />
</ResourceDictionary>