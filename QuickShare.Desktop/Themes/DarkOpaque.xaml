<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QuickShare.Desktop.Themes">
    <SolidColorBrush x:Key="TextColor" Color="White" />
    <SolidColorBrush x:Key="BackgroundColor" Color="#ff1f1f1f" />
    <SolidColorBrush x:Key="ListItemBackgroundColor" Color="#55505050" />
    <SolidColorBrush x:Key="BorderColor" Color="#3A3A3A" />
    <BitmapImage x:Key="AppIcon" UriSource="pack://application:,,,/Resources/icon48_white.png" />
    <BitmapImage x:Key="SettingsIcon" UriSource="pack://application:,,,/Resources/settings_white.png" />

    <SolidColorBrush x:Key="ScrollBarBackground" Color="#1B1B1B" />
    <SolidColorBrush x:Key="ScrollBarButtonPressed" Color="#A4A4A4" />
    <SolidColorBrush x:Key="ScrollBarThumbMouseOver" Color="#767676" />
    <SolidColorBrush x:Key="ScrollBarThumbColor" Color="#494949" />
    <SolidColorBrush x:Key="ScrollBarButtonForeground" Color="#CDCDCD" />
    <SolidColorBrush x:Key="ScrollBarButtonMouseOver" Color="#313131" />
</ResourceDictionary>